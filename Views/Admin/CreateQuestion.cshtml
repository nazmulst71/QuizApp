@model QuizApp.Models.Question
@{
    ViewData["Title"] = "Create Question";
}
<h2>Create Question</h2>
<hr />
<form asp-action="CreateQuestion" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuizId" />
    <div class="mb-3">
        <label asp-for="Text" class="form-label"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Save</button>
    <a asp-action="ManageQuestions" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Back</a>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}